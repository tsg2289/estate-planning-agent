# Environment Variables for Estate Planning Agent Frontend
# Copy this file to .env.local for local development
# Set these values in Vercel dashboard for production

# App Configuration
VITE_APP_NAME="Estate Planning Agent"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENV="development"

# Security
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true

# API Configuration - Updated to use your deployed backend
VITE_API_URL=https://estate-planning-agent.vercel.app/api

# Feature Flags
VITE_ENABLE_DOCUMENT_GENERATION=true
VITE_ENABLE_FORM_VALIDATION=true

# Other Configuration
NODE_ENV=development
