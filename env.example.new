# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
NEXT_PUBLIC_SUPABASE_PROJECT_ID=your_supabase_project_id

# AI Configuration (Server-only - never expose to client)
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Security Keys (Server-only)
ANONYMIZATION_SECRET=your_super_secure_anonymization_key_change_in_production
ENCRYPTION_KEY=your_document_encryption_key_change_in_production

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Monitoring and Analytics
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# SOC2 Compliance Configuration
DATA_RETENTION_DAYS=2555  # 7 years default
AUDIT_LOG_RETENTION_DAYS=2555
AUTO_DELETE_EXPIRED_DATA=true

# Email Configuration (Optional)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@yourdomain.com

# Development Settings
NODE_ENV=development
LOG_LEVEL=debug