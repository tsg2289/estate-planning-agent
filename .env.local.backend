# Environment Variables for Estate Planning Agent
# Copy this file to .env.local for local development
# Set these values in Vercel dashboard for production

# App Configuration
VITE_APP_NAME="Estate Planning Agent"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENV="production"

# Security
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false

# API Configuration (if you add backend later)
# VITE_API_URL=https://your-api-domain.com
# VITE_API_KEY=your-api-key

# Feature Flags
VITE_ENABLE_DOCUMENT_GENERATION=true
VITE_ENABLE_FORM_VALIDATION=true

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production

# Email Configuration for 2FA
# SMTP Configuration (Gmail, Outlook, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Alternative email environment variables
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# From email address
FROM_EMAIL=noreply@yourdomain.com

# Frontend URL for email links
FRONTEND_URL=https://your-app.vercel.app

# Database Configuration (for future use)
# DATABASE_URL=your-database-connection-string

# Other Configuration
# NODE_ENV=production
